<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clContact"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FBDDDD"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#D2D6EF">

        <TextView
            android:id="@+id/tvname"
            android:layout_width="169dp"
            android:layout_height="25dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="72dp"
            android:text="Catherine Gichina."
            app:layout_constraintBottom_toTopOf="@+id/tvnumber"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgContacts"
            app:layout_constraintTop_toBottomOf="@+id/tvemail" />

        <TextView
            android:id="@+id/tvemail"
            android:layout_width="162dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="68dp"
            android:layout_marginBottom="6dp"
            android:text="jojo@gmail.com"
            app:layout_constraintBottom_toTopOf="@+id/tvname"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgContacts"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvnumber"
            android:layout_width="149dp"
            android:layout_height="49dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="76dp"
            android:layout_marginBottom="1dp"
            android:text="099999"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgContacts"
            app:layout_constraintTop_toBottomOf="@+id/tvname" />

        <ImageView
            android:id="@+id/imgContacts"
            android:layout_width="124dp"
            android:layout_height="89dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toEndOf="@+id/tvemail"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_phone_in_talk_24" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintStart_toEndOf="@+id/tvname"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.238"
            app:srcCompat="@drawable/ic_baseline_textsms_24" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>