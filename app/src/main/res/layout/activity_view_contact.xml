<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewContactActivity">

    <ImageView
        android:id="@+id/imgview"
        android:layout_width="83dp"
        android:layout_height="69dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_person_24" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="61dp"
        android:layout_height="21dp"
        android:layout_marginStart="36dp"
        android:text="Name:"
        app:layout_constraintBottom_toBottomOf="@+id/tvname2"
        app:layout_constraintStart_toEndOf="@+id/imgview"
        app:layout_constraintTop_toTopOf="@+id/tvname2"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvname2"
        android:layout_width="132dp"
        android:layout_height="33dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="John"
        app:layout_constraintBottom_toTopOf="@+id/email2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="62dp"
        android:layout_height="20dp"
        android:layout_marginStart="36dp"
        android:text="phone:"
        app:layout_constraintBottom_toBottomOf="@+id/tvnumber2"
        app:layout_constraintStart_toEndOf="@+id/imgview"
        app:layout_constraintTop_toTopOf="@+id/tvnumber2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/email2"
        android:layout_width="133dp"
        android:layout_height="33dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="43dp"
        android:text="joo@gmail"
        app:layout_constraintBottom_toTopOf="@+id/tvnumber2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvname2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="62dp"
        android:layout_height="20dp"
        android:layout_marginStart="52dp"
        android:text="Email"
        app:layout_constraintBottom_toBottomOf="@+id/email2"
        app:layout_constraintStart_toEndOf="@+id/imgview"
        app:layout_constraintTop_toTopOf="@+id/email2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvnumber2"
        android:layout_width="133dp"
        android:layout_height="33dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="581dp"
        android:text="0788"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="189dp" />
</androidx.constraintlayout.widget.ConstraintLayout>